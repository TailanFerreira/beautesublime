<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_adicionar_cli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar Novo Cliente" />

        <Button
            android:id="@+id/btn_editar_cli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Cliente Existente" />

        <Button
            android:id="@+id/btn_informacoes_cli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver informações dos Clientes" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>